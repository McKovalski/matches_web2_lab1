      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group" >
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text, class:"form-control" %>
