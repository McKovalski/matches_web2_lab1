<% unless notice.nil? %>
  <div class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<% unless error.nil? %>
  <div class="alert alert-danger" role="alert"><%= error %></div>
<% end %>

<h1>Played Matches</h1>
<br/>

<table class="table table-striped table-bordered table-hover text-center">
    <thead class="thead-dark">
      <tr>
        <th>Home Team Name</th>
        <th>Home Team Score</th>
        <th>Away Team Score</th>
        <th>Away Team Name</th>
        <th>Game Start</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @played_matches_wrappers.each do |wrapper| %>
        <tr>
          <td><%= wrapper.home_team_name %></td>
          <td><strong> <%= wrapper.match.home_team_score %></strong> </td>
          <td><strong> <%= wrapper.match.away_team_score %></strong> </td>
          <td><%= wrapper.away_team_name %></td>
          <td><%= wrapper.match.time_of_play.strftime("%d %b %Y, %H:%M ") %></td>
          <td><%= link_to 'Show', wrapper.match, class:"btn btn-outline-secondary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<br/>
